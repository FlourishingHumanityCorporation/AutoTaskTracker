# AutoTaskTracker Configuration Template
# Copy this file to .env and customize for your environment
#
# IMPORTANT: Nested configuration uses double underscores (__)
# Example: AUTOTASK_DATABASE__PATH sets config.database.path
#
# All variables are optional - defaults are used if not specified
# See docs/guides/config_migration.md for migration help

# Application Settings
AUTOTASK_DEBUG=false
AUTOTASK_APP_NAME=AutoTaskTracker

# Database Configuration
# Note: Double underscore (__) separates section from field name
AUTOTASK_DATABASE__PATH=~/.memos/database.db              # SQLite database location
AUTOTASK_DATABASE__CONNECTION_POOL_SIZE=5                 # Number of concurrent connections
AUTOTASK_DATABASE__QUERY_TIMEOUT_SECONDS=30              # Max query execution time

# Server Ports
AUTOTASK_SERVER__HOST=localhost
AUTOTASK_SERVER__MEMOS_PORT=8839
AUTOTASK_SERVER__MEMOS_WEB_PORT=8840
AUTOTASK_SERVER__TASK_BOARD_PORT=8502
AUTOTASK_SERVER__ANALYTICS_PORT=8503
AUTOTASK_SERVER__TIMETRACKER_PORT=8505
AUTOTASK_SERVER__NOTIFICATIONS_PORT=8506
AUTOTASK_SERVER__ADVANCED_ANALYTICS_PORT=8507
AUTOTASK_SERVER__OVERVIEW_PORT=8508
AUTOTASK_SERVER__FOCUS_TRACKER_PORT=8509
AUTOTASK_SERVER__DAILY_SUMMARY_PORT=8510

# VLM (Visual Language Model) Configuration
AUTOTASK_VLM__MODEL=minicpm-v
AUTOTASK_VLM__PORT=11434
AUTOTASK_VLM__CACHE_DIR=~/.memos/vlm_cache

# Embedding Model Configuration
AUTOTASK_EMBEDDING__MODEL=jina-embeddings-v2-base-en
AUTOTASK_EMBEDDING__DIMENSION=768

# Processing Settings
AUTOTASK_PROCESSING__BATCH_SIZE=50
AUTOTASK_PROCESSING__CONFIDENCE_THRESHOLD=0.7
AUTOTASK_PROCESSING__AUTO_REFRESH_SECONDS=30
AUTOTASK_PROCESSING__CACHE_TTL_SECONDS=60
AUTOTASK_PROCESSING__SCREENSHOT_INTERVAL_SECONDS=4

# Directory Settings
AUTOTASK_SCREENSHOTS_DIR=~/.memos/screenshots
AUTOTASK_LOGS_DIR=~/.memos/logs

# Feature Flags
AUTOTASK_SHOW_SCREENSHOTS=true
AUTOTASK_ENABLE_NOTIFICATIONS=true
AUTOTASK_ENABLE_ANALYTICS=true

# Pensieve Integration
AUTOTASK_USE_PENSIEVE_API=true
AUTOTASK_PENSIEVE_CONFIG_SYNC=true

# Security Settings (Optional)
# AUTOTASK_SECURITY__API_KEY=your-secret-api-key-here

# External Service URLs (Optional)
# OLLAMA_URL=http://localhost:11434

# Advanced Configuration Examples
# ================================
# 
# Setting nested values:
# AUTOTASK_VLM__CACHE_DIR=/custom/cache/dir
# AUTOTASK_PROCESSING__BATCH_SIZE=100
#
# Setting multiple environments:
# .env.development - Development settings
# .env.production - Production settings
# .env.test - Test settings
#
# Priority order (highest to lowest):
# 1. Environment variables
# 2. .env file
# 3. Default values in code