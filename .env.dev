# Development Environment Configuration
# This file contains development-specific settings

# Development Mode
AUTOTASK_DEBUG=true
AUTOTASK_APP_NAME=AutoTaskTracker-Dev

# Development Database (separate from production)
AUTOTASK_DATABASE__PATH=~/.memos/dev_database.db

# Development Ports (offset to avoid conflicts)
AUTOTASK_SERVER__TASK_BOARD_PORT=8512
AUTOTASK_SERVER__ANALYTICS_PORT=8513
AUTOTASK_SERVER__TIMETRACKER_PORT=8515

# Faster refresh for development
AUTOTASK_PROCESSING__AUTO_REFRESH_SECONDS=10
AUTOTASK_PROCESSING__CACHE_TTL_SECONDS=30

# Development directories
AUTOTASK_SCREENSHOTS_DIR=~/.memos/dev_screenshots
AUTOTASK_LOGS_DIR=~/.memos/dev_logs

# Enable all features for development
AUTOTASK_SHOW_SCREENSHOTS=true
AUTOTASK_ENABLE_NOTIFICATIONS=true
AUTOTASK_ENABLE_ANALYTICS=true

# Development Pensieve settings
AUTOTASK_USE_PENSIEVE_API=true
AUTOTASK_PENSIEVE_CONFIG_SYNC=true